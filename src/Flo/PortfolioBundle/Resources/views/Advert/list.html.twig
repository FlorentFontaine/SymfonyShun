{% extends "FloPortfolioBundle::layout.html.twig" %}

{#  #}

{% block floportfolio_body %}
<ul class="pagination">
  {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
  {% for p in range(1, nbPages) %}
    <li{% if p == page %} class="active"{% endif %}>
      <a href="{{ path('flo_portfolio_list', {'page': p}) }}">{{ p }}</a>
    </li>
  {% endfor %}
</ul>

{% endblock %}